// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile", // <-- สำคัญ ต้องตรงกับ preLaunchTask ใน launch.json
      "type": "shell",
      "command": "npm run compile", // หรือ "tsc -p ." ก็ได้
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc"
    }
  ]
}
